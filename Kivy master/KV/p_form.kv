#: import Form form
<FormScreen>:
    FloatLayout:
        Label:
            markup: True
            text: "[color=#0000ff][font=OpenSans]Form[/color][/font]"
            size_hint: (None,None)
            size: (50,50)
            pos: (385,385)
            font_size: '23px'

        Label:
            text: "First Name"
            pos : (-307,110)
            bold: True
            color: [0,0,0,1]
        Label:
            text: "Middle Name"
            pos : (-30,110)
            bold: True
            color: [0,0,0,1]
        Label:
            text: "Last Name"
            pos : (236,110)
            bold: True
            color: [0,0,0,1]
        Label:
            text: "[color=#FF0000]Note:[/color] [color=#3b3838]All Fields Are Required.[/color]"
            markup: True
            pos: (0,-160)

    FloatLayout:
        p_fname: p_fname
        p_mname: p_mname
        p_lname: p_lname
        TextInput:
            id: p_fname
            hint_text: "Enter First Name"
            multiline: False
            size_hint: (None,None)
            height: 30
            width: 170
            pos : (60,293)
            use_bubble: True
        TextInput:
            id: p_mname
            hint_text: "Enter Middle Name"
            multiline: False
            size_hint: (None,None)
            height: 30
            width: 170
            pos : (325,293)
            use_bubble: True
        TextInput:
            id: p_lname
            hint_text: "Enter Last Name"
            multiline: False
            size_hint: (None,None)
            height: 30
            width: 170
            pos : (600,293)
            use_bubble: True
    FloatLayout:
        Label:
            text:'Date Of Birth'
            pos : (-298,25)
            bold: True
            color: [0,0,0,1]
        Label:
            text:'Height'
            pos : (-50,25)
            bold: True
            color: [0,0,0,1]
        Label:
            text: 'Weight'
            pos : (228,25)
            bold: True
            color: [0,0,0,1]
    FloatLayout:
        p_dob: p_dob
        p_weight: p_weight
        p_height: p_height
        TextInput:
            id: p_dob
            hint_text: "Enter D.O.B(dd/mm/yyyy)"
            multiline: False
            size_hint: (None,None)
            height: 30
            width: 180
            pos: (60,200)
            use_bubble: True
            input_filter: lambda text, from_undo: text[:10 - len(self.text)]
        TextInput:
            id: p_height
            hint_text: "Enter Height(in cm)"
            multiline: False
            size_hint: (None,None)
            height: 30
            width: 170
            pos: (325,200)
            use_bubble: True
            input_filter: lambda text, from_undo: text[:3 - len(self.text)]
        TextInput:
            id: p_weight
            hint_text: "Enter Weight(in kg)"
            multiline: False
            size_hint: (None,None)
            height: 30
            width: 170
            pos: (600,200)
            use_bubble: True
            input_filter: lambda text, from_undo: text[:3 - len(self.text)]

    FloatLayout:
        p_age: p_age
        p_smoke_yes: p_smoke_yes
        p_smoke_no: p_smoke_no
        p_gender_m: p_gender_m
        p_gender_f: p_gender_f
        p_gender_o: p_gender_o
        Label:
            text: "Gender"
            bold: True
            pos: (-310,-70)
            color: [0,0,0,1]
        Label:
            text: "Age"
            pos: (-60,-70)
            bold: True
            color: [0,0,0,1]
        Label:
            text: "Do you smoke?"
            pos: (250,-70)
            bold: True
            color: [0,0,0,1]
        TextInput:
            id: p_age
            pos: (325,115)
            disabled: True
            disabled_foreground_color: [0,0,0,1]
            size_hint: (None,None)
            height: 30
            width: 95
        CheckBox:
            id: p_gender_m
            group: "gender_rb"
            pos: (-323,-100)
            color: [0,0,0,1]
        Label:
            text: "Male"
            pos: (-292,-100)
            color: [0,0,0,1]
        CheckBox:
            id: p_gender_f
            group: "gender_rb"
            pos: (-323,-130)
            color: [0,0,0,1]
        Label:
            text: "Female"
            pos: (-286,-130)
            color: [0,0,0,1]
        CheckBox:
            id: p_gender_o
            group: "gender_rb"
            pos: (-323,-160)
            color: [0,0,0,1]
        Label:
            text: "Other"
            pos: (-292,-160)
            color: [0,0,0,1]
        CheckBox:
            id: p_smoke_yes
            group: "smoke_rb"
            value: root.yes
            pos: (560,92)
            color: [0,0,0,1]
            size_hint: (None,None)
        Label:
            text: "Yes"
            pos: (235,-100)
            color: [0,0,0,1]
        CheckBox:
            id: p_smoke_no
            group: "smoke_rb"
            value: root.no
            pos: (611,92)
            color: [0,0,0,1]
            size_hint: (None,None)
        Label:
            text: "No"
            pos: (283,-100)
            color: [0,0,0,1]

    FloatLayout:
        submit_btn: submit_btn
        cancel_btn: cancel_btn
        Button:
            id: submit_btn
            background_color: [0,0,200,0.8]
            markup: True
            text: "[color=#ffffff][b]Submit[/b][/color]"
            size_hint: (None,None)
            height: 38
            width: 100
            pos: (280,20)
            on_press: root.submit_popup()
        Button:
            id: cancel_btn
            background_color: [0,0,200,.8]
            markup: True
            text: "[color=#ffffff][b]Cancel[/b][/color]"
            size_hint: (None,None)
            height: 38
            width: 100
            pos: (400,20)
            on_press : root.exit_prog()
            color: [1,1,1,1]




