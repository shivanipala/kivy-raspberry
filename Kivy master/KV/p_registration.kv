
<RegistrationScreen>:
    FloatLayout:
        Label:
            markup: True
            text: "[color=#0000ff][font=OpenSans]Registration[/color][/font]"
            size_hint: (None,None)
            size: (50,50)
            pos: (385,385)
            font_size: '23px'

        Button:
            id: new_registration
            bold: True
            color: [0,0,0,1]
            text: "                        New\n                   Registration"
            size_hint: (None,None)
            background_color: [1,1,1,0]
            size: (200,100)
            pos: (310,220)
            on_press: root.binds()




            canvas.before:
                Color:
                    rgba: .5, 0.5,0.5 , .8
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
            canvas:
                Rectangle:
                    source: "Resources/new_register.png"
                    size: (80,80)
                    pos: (319,230)

        Button:
            id: already_registered
            bold: True
            color: [0,0,0,1]
            text: "                     Already\n                   Registered"
            size_hint: (None,None)
            size: (200,100)
            pos: (310,60)
            background_color: [1,1,1,0]
            on_release: root.binds()

            canvas.before:
                Color:
                    rgba: .5, 0.5,0.5 , .8
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
            canvas:
                Rectangle:
                    source: "Resources/already_register.png"
                    size: (80,80)
                    pos: (319,70)

